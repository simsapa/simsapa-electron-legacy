{
    "name": "simsapa",
    "productName": "Siṃsapā Dhamma Reader",
    "version": "0.1.0",
    "description": "Read the suttas and other Dhamma texts. Includes Pali - English dictionaries.",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint src --color",
        "fetch-assets": "./node_modules/.bin/nwget http://ssp.a-buddha-ujja.org/v0.1.0/development.sqlite3 -O ./src/development.sqlite3 > nwget.log",
        "sass-build": "npm run sass-build-clean && npm run sass-build-sass && npm run sass-build-autoprefix",
        "sass-build-autoprefix": "postcss --use autoprefixer --map false --output ./src/static/assets/stylesheets/main.css ./src/static/assets/stylesheets/main.css",
        "sass-build-cleancss": "cleancss -o ./src/static/assets/stylesheets/main.min.css ./src/static/assets/stylesheets/main.css",
        "sass-build-clean": "rimraf ./src/static/assets/stylesheets",
        "sass-build-sass": "node-sass --output-style expanded --source-map true ./gui-src/sass/main.sass ./src/static/assets/stylesheets/main.css",
        "sass-start": "npm run sass-build-sass -- --watch"
    },
    "repository": "https://github.com/simsapa/simsapa",
    "keywords": [
        "pali",
        "dhamma",
        "suttas"
    ],
    "author": "gambhiro",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn",
                "icon": "./src/static/assets/icons/logo-letter-w1024",
                "ignore": [ "gui-src" ]
            },
            "electronWinstallerConfig": {
                "name": "simsapa"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "simsapa",
                "name": "simsapa"
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "simsapa"
            }
        }
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "electron-compile": "^6.4.3",
        "electron-squirrel-startup": "^1.0.0",
        "express": "^4.16.3",
        "sequelize": "^4.38.1",
        "sequelize-cli": "^4.1.1",
        "sqlite3": "^4.0.2"
    },
    "devDependencies": {
        "autoprefixer": "^9.1.5",
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "clean-css-cli": "^4.2.1",
        "electron-forge": "^5.2.2",
        "electron-prebuilt-compile": "3.0.0",
        "eslint": "^3",
        "eslint-config-airbnb": "^15",
        "eslint-plugin-import": "^2",
        "eslint-plugin-jsx-a11y": "^5",
        "eslint-plugin-react": "^7",
        "node-sass": "^4.9.3",
        "postcss-cli": "^6.0.0",
        "rimraf": "^2.6.2",
        "wget-improved": "^3.0.1"
    }
}
